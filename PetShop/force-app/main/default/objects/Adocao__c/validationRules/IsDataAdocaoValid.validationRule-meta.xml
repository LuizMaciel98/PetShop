<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IsDataAdocaoValid</fullName>
    <active>true</active>
    <errorConditionFormula>Data__c &lt; TODAY()</errorConditionFormula>
    <errorDisplayField>Data__c</errorDisplayField>
    <errorMessage>A data da adoção não pode ser menor do que a data de hoje.</errorMessage>
</ValidationRule>
